{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowImportingTsExtensions": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~helpers/*": ["./src/helpers/*"],
      "~utils/*": ["./src/utils/*"],
      "~store/*": ["./src/store/*"],
      "~meta/*": ["./src/meta/*"],

      "~api/*": ["./src/api/components/*"],
      "~interfaces/*": ["./src/api/interfaces/*"],

      "~styles/*": ["./src/styles/*"],
      "~fonts": ["./src/styles/fonts/fonts.ts"],
      "~global_styles": ["./src/styles/global/globals.scss"],
      "~variables": ["./src/styles/variables/index.scss"],
      "~mixin/*": ["./src/styles/mixin/*"],
      "~adaptive": ["./src/styles/mixin/_adaptive.scss"],
      "~data/*": ["./src/data/*"],
      "~hooks/*": ["./src/hooks/*"],

      "~img/*": ["./public/img/*"],
      "~svg/*": ["./public/svg/*"],

      "~app/*": ["./src/components/01_app/*"],
      "~pages/*": ["./src/components/02_pages/*"],
      "~widgets/*": ["./src/components/03_widgets/*"],
      "~common/*": ["./src/components/03_commonBlocks/*"],
      "~features/*": ["./src/components/04_features/*"],
      "~entities/*": ["./src/components/05_entities/*"],
      "~shared/*": ["./src/components/06_shared/*"],

    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
